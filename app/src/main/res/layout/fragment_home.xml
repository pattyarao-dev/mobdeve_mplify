<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/background">

           <TextView
               android:id="@+id/homepageHeading"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/primary"
               android:fontFamily="@font/work_sans_bold"
               android:padding="5dp"
               android:text="mplify"
               android:textAlignment="center"
               android:textAllCaps="true"
               android:textColor="@color/white"
               android:textSize="42sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/recentReleasesHeading"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="24dp"
               android:layout_marginVertical="10dp"
               android:text="Recents by Artists You Follow"
               android:textSize="20sp"
               android:fontFamily="@font/work_sans_bold"
               app:layout_constraintTop_toBottomOf="@id/homepageHeading"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recentReleases"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="24dp"
               app:layout_constraintTop_toBottomOf="@+id/recentReleasesHeading"/>

           <TextView
               android:id="@+id/popularReleasesHeading"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="24dp"
               android:layout_marginTop="30dp"
               android:text="Popular Today"
               android:textSize="20sp"
               android:fontFamily="@font/work_sans_bold"
               app:layout_constraintTop_toBottomOf="@id/recentReleases"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/popularReleases"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="24dp"
               app:layout_constraintTop_toBottomOf="@+id/popularReleasesHeading"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>

</FrameLayout>