<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle (the border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#EDDEA4"/> <!-- Border color -->
            <size android:width="10dp"/> <!-- Border width -->
        </shape>
    </item>

    <!-- Inner circle (the image background) -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="ring">
            <solid android:color="@android:color/transparent"/> <!-- Background color (optional) -->
        </shape>
    </item>
</layer-list>